nav
  height 63px
  background white
  boxShadow()
  position relative
  z-index 5
  width 100%
  float left
  padding 0

  img
    float left

    &.home
      margin 10px

    &.search
      margin 15px

    &.more
      margin 7px
      position relative
      z-index 1

    &.sort
      margin 13px
      position relative
      z-index 1

  button
    outline none
    float right
    background transparent
    border none
    padding 0
    cursor pointer
    position relative

    .buttonBackground
      height 0px
      width 0px
      display block
      position absolute
      z-index 0
      background #f7f7f7
      margin 29.5px
      border-radius 100%
      transition all $time ease-in-out

    &:hover
      .buttonBackground
        height 45px
        width 45px
        margin 7px

  a
    display inline-block
    text-decoration none
    cursor pointer

    &.signInButton, &.firebase
      padding 20px 20px 20px 0
      float right
      box-shadow none

    &:visited
      background transparent

  .currentUser
    padding 20px
    margin 0
    float right
