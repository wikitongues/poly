nav
  height 63px
  background $white
  boxShadow()
  position fixed
  z-index 5
  width 100%
  min-width 600px
  float left
  padding 0
  margin-bottom 20px

  a
    float left

    &.icon.home
      height 40px
      width 40px
      float left

      img
        height 40px
        float left

      > img
        width 40px
        transition all $time ease-in-out

      .detail
        overflow hidden
        width 0
        display inline-block
        margin-left -7px
        transition all $time ease-in-out

      &:hover, &:focus
            outline none

  a,
  div.logIn a,
  div.logIn p
    display inline-block
    text-decoration none

  .logIn, .loggedIn
    float right
    margin 15px

  .logIn
    p
      padding 9px
      margin 0

    a
      textButton()
      background transparent
      color black

      &.signUp
        color $white
        background $blue
        border 1px solid rgba(71,153,252,0.1)

      &:visited
        background transparent

  .loggedIn
    float right
    position relative
    cursor pointer

    &.rails //for non-react views
      .currentUser
        padding-right 16px

    .currentUser
      textButton()
      padding-right 0
      float left
      height 31px
      background transparent
      color $darkBlue

      span,
      img
        float left

      img
        height 35px
        padding 10px
        display inline-block
        margin-top -10px
        margin-left 5px

    a
      width 100%
      background $white

      &:hover
        background lighten($blue,90%)

      span
        display block

      img.mobile
        display none

    .navMenu
      width 100%
      position absolute
      top 50px
      left 50%
      transform translateX(-50%)
      background white
      padding 3px
      border-radius $radius
      box-shadow 0 1px 2px rgba(0,0,0,0.15)

      a
        font-size .8rem
        padding .5rem
        white-space nowrap

      &::after,
      &::before
        bottom 100%
        left 50%
        border solid transparent
        content " "
        height 0
        width 0
        position absolute
        pointer-events none

      &::after
        border-color transparent
        border-bottom-color #fff
        border-width 10px
        margin-left -10px

      &::before
        border-color transparent
        border-bottom-color #adbcc9
        border-width 11px
        margin-left -11px

  form
    max-width 600px
    margin-top 5px
    float left
    position absolute
    left 50%
    margin-left -300px

    img
      float left
      margin 17px -55px 0 18px
      position relative
      height 20px
      pointer-events none

    input
      border-radius $radius
      width 100%
      font-size 16px
      padding 17px 8px 15px 50px
      float left
      border none
      font-weight 100
      placeholder-color($grey)

      &:focus, &:hover
        background $whiteHover