.welcome
  text-align center
  padding 20px
  margin 0 auto 10px
  background #fff
  display table
  list-style-type none
  width 100%
  min-width 700px
  box-shadow 0 1px 2px rgba(0,0,0,0.1)
  transition background $time*2 ease-in-out, opacity $time*2 ease-in-out
  border-radius 0 0 2*$radius 2*$radius

  .logIn
    width 100%

    p, a
      display inline

  h1
    text-transform uppercase
    margin-bottom 30px

  .action
    textButton()

  a
    textButton()
    background white
    text-decoration none
    border 1px solid $buttonBlue

.logIn
  float right
  padding 11px

  p
    padding 9px
    margin 0

  a
    textButton()
    background transparent
    color black
    border 1px solid rgba(71,153,252,1)

    &.signInButton
      color white
      background $buttonBlue
      border 1px solid rgba(71,153,252,0.1)

    &:visited
      background transparent