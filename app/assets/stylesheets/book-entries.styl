ul.bookEntryList
  background #fff
  padding 0
  margin 0
  list-style-type none
  width 100%
  box-shadow 0 1px 2px rgba(0,0,0,0.1)
  transition background $time*2 ease-in-out, opacity $time*2 ease-in-out
  border-radius 0 0 2*$radius 2*$radius
  border-left 1px solid rgba(0,0,0,0.15)
  border-right 1px solid rgba(0,0,0,0.15)
  border-bottom 1px solid rgba(0,0,0,0.15)

  &:hover
    background lighten(#E7EFF2, 80%)

    li
      opacity .6

  li.bookEntry
    overflow hidden
    display table
    border-bottom 1px solid lighten(#E7EFF2, 35%)
    width 100%
    transition background $time*2 ease-in-out, opacity $time*2 ease-in-out

    &:last-of-type
      border-radius 0 0 2*$radius 2*$radius

    &:hover
      opacity 1
      background #fff
      border-bottom-color lighten(#E7EFF2, 55%)

    a
      display inline-block
      width 100%
      height 100%
      float left

      img
        float left
        margin 30px

      p
        margin 15px 0 0 0
        float left
        overflow hidden
        text-overflow ellipsis
        white-space nowrap

      section
        display inline-block

        &.info
          width 100%
          float left

          .clear
            width 70%
            float left

            .title
              margin 15px 20px 10px
              font-weight 100

            .details
              display inline-block
              clear left
              margin 0 20px 15px

              .language
                text-transform capitalize
                float left
                font-weight 100
                text-align center
                padding 0
                margin 0

              img
                float left
                margin 0 10px
                padding 0 4px

          .meta
            width 30%
            float right
            margin 0

            p
              float right
              clear right
              font-size .8em
              color #aaa
              font-weight 100
              padding 0 15px

              &.date
                margin-bottom 10px