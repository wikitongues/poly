*
  box-sizing border-box
  font-family $sans

html
  width 100%

  body
    width inherit
    margin 0
    display inline-block
    background #F2F5F6

    .container
      display inline-block
      width 100%
      padding-bottom 90px

a
  color $blue

  &:visited
    background #fafafa
    color lighten($blue, 20%)

  &:active
    color $blue

p.version
  margin 0
  padding 10px 20px
  opacity .3
  float left

.flash_notice, .flash_alert
  z-index 10
  width 600px
  font-weight 100
  text-align center
  padding 22px 21px
  position absolute
  left 50%
  margin-left -300px

.flash_notice
  background transparent
  color $buttonBlue

.flash_alert
  background #FFE9E9

.backgroundElement
  position absolute
  z-index 0
  width 100%
  height 180px
  background #90A2B7
  border-bottom 3px solid #7e95ae
  left 0
  top 60px