.book
  width 100%
  max-width 600px
  min-width 450px
  box-shadow 0 2px 2px rgba(0,0,0,0.2)
  display table
  margin 80px auto 0
  background-color #e9f1f3

  *
    font-weight 100

  fieldset
    border none

  .info, .cardinality, img.banner
    display inline-block
    width 100%
    float left

  .info, img.banner
    background $white

  .bannerWrapper
    height 400px
    overflow hidden
    width 100%
    position relative
    background-size cover
    background-position center

  .progressBar
    height 4px
    width 100%
    background #eee
    float left

    .bar
      height 100%
      min-width 3px
      float left
      background $blue

  .tools, .cardinality
    .autosuggest
      display table
      width 47%
      float left

    .dropdown-menu
      position absolute
      top 50px
      background-color #ff0000
      width 100%
      max-height 150px
      overflow scroll
      box-shadow 0px 8px 16px 0px rgba(0,0,0,0.2)
      z-index 20

      .item
        height 42px
        background-color $white
        padding-top 6px
        padding-left 14px
        white-space nowrap
        overflow hidden
        text-overflow ellipsis
        border-bottom 1px solid lighten($source, 35%)
        .title
          color $darkBlue
          font-size 14px
        .subtitle
          font-size 10px
          color $grey

      .item-highlighted
        background-color lighten($target, 35%)

  .info
    z-index 1
    position relative
    padding 0 20px
    max-width 600px

    .wrapper
      width 100%
      margin auto
      position relative
      display table

      .menu
        top 20px
        right -20px

      .title.isEditing
        padding-right 35px

      section
        button
          border none
          padding 8px
          margin 7px
          position relative
          cursor pointer
          background transparent
          border-radius 100%
          outline none

          &:hover
            .buttonBackground
              height 45px
              width 45px
              margin -4px -4.6px

          &:active
            padding 9px 8px 7px

            img.star
              float left

          &.favorite
            float left

          &.deleteBook
            float right

          span.buttonBackground
            height 0px
            width 0px
            display block
            display none
            position absolute
            z-index 0
            background #f7f7f7
            margin 29.5px
            border-radius 100%
            box-shadow inset 0 1px 1px rgba(0,0,0,0.1)
            transition all $time ease-in-out

      h1
        float left
        width 100%
        max-width 550px
        white-space normal
        overflow hidden
        font-size 1.7em

      h3
        line-height 2.4em
        margin-bottom 0
        float right

      .description,
      .author
        float left

      .descriptionArea
        display inline-block
        width 100%

      .addVideoButton
        background lighten($whiteHover, 50%)
        border none
        color $blue
        cursor pointer
        width 100%
        padding 1em 0 1em
        border-radius $radius
        margin 1em 0
        transition $time all ease-in-out

        &:hover
          background $whiteHover

      .videoDescription
        margin 0 -20px
        width 600px
        display inline-block

        .videoComponent
          margin 0
          position relative

          button
            &.play
              width 45px
              height 45px
              padding 0
              border-radius 100%
              cursor pointer
              outline none
              background #5d5d5d
              background rgba(50,50,50,0.3)
              margin 10px 0
              border none

              img
                margin 12px 9px 12px 12px
                width 21px
                height 21px

              &.descriptionVideoPause
                img
                  margin 12px 13px

      .description
        width 100%
        margin 1em 0 1.5em 0
        padding 2px 2px 4px

        button
          background none
          border none
          color $blue
          cursor pointer

      a.author, p.author
        clear both
        padding 8px 11px
        margin -8px -11px 1em
        font-size 12px
        text-decoration none
        border-radius $radius
        color $blue

      p.author.new
        color $grey
